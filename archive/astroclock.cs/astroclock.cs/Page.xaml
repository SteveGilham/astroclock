<UserControl x:Class="astroclock.cs.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="400" Height="300">
    <Grid x:Name="LayoutRoot" Background="White">
        <Path Name="moon" Fill = "Silver" StrokeThickness = "1" Stroke="Silver">
            <Path.Data>
                <PathGeometry>
                    <PathGeometry.Figures>
                        <PathFigure StartPoint="147.5, 147.5">
                            <PathFigure.Segments>
                                <ArcSegment Size="2.5, 2.5" RotationAngle="180" 
                                        Point="152.5, 152.5" IsLargeArc="False"
                                        SweepDirection="Clockwise" />
                                <ArcSegment Size="2.5, 2.5" RotationAngle="180" 
                                        Point="147.5, 147.5" IsLargeArc="False"
                                        SweepDirection="Clockwise" />
                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry.Figures>
                </PathGeometry>
            </Path.Data>
        </Path>

    </Grid>
</UserControl>
